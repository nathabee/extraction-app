<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Select Input Image -->
        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="@string/select_image" />

        <ImageView
            android:id="@+id/img_input"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/gray"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/desc_img_input" />

        <!-- Select Background Image (Optional) -->
        <Button
            android:id="@+id/btn_select_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="@string/select_background" />

        <ImageView
            android:id="@+id/img_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="@color/gray"
            android:contentDescription="@string/desc_img_background"/>

        <!-- Image Size Selection -->
        <TextView
            android:id="@+id/text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_image_size"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinner_size"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_marginTop="4dp" />

        <!-- Sliders for Parameters -->
        <TextView
            android:id="@+id/text_tolerance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tolerance"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <SeekBar
            android:id="@+id/seek_tolerance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="30"/>

        <TextView
            android:id="@+id/text_brightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/brightness"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <SeekBar
            android:id="@+id/seek_brightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="200"/>

        <TextView
            android:id="@+id/text_threshold1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/threshold1"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <SeekBar
            android:id="@+id/seek_threshold1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="50"/>

        <TextView
            android:id="@+id/text_threshold2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/threshold2"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <SeekBar
            android:id="@+id/seek_threshold2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="150"/>

        <!-- Process Image Button -->
        <Button
            android:id="@+id/btn_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="@string/process_image"
            android:layout_marginTop="16dp"/>

        <!-- Processed Image Output -->
        <ImageView
            android:id="@+id/img_output"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            android:contentDescription="@string/output_image_desc" />

        <!-- Processed Transparent Image Output -->
        <ImageView
            android:id="@+id/img_transparent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/transparent_image_desc"/>


    </LinearLayout>
</ScrollView>
