<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Image Selection Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"/>

        <Button
            android:id="@+id/btn_select_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Background"/>
    </LinearLayout>

    <!-- Images Side by Side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_input"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/img_background"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <!-- Image Size Dropdown -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Size"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner_image_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Threshold Inputs -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Threshold 1"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/input_threshold1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Threshold 1"
        android:inputType="numberDecimal"/>

    <SeekBar
        android:id="@+id/seekbar_threshold1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Threshold 2"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/input_threshold2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Threshold 2"
        android:inputType="numberDecimal"/>

    <SeekBar
        android:id="@+id/seekbar_threshold2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"/>

    <!-- Process Image Button -->
    <Button
        android:id="@+id/btn_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Process Image"/>

    <!-- Processed Images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_edge"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/img_transparent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <!-- Save Image Button -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Processed Image"/>
</LinearLayout>
